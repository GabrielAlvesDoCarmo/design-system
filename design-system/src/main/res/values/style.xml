<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.DesignSystemModule" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.DesignSystemModule" parent="Base.Theme.DesignSystemModule" />

    <style name="DSComponent.LayoutEditPhone" parent="Widget.Design.TextInputLayout">
        <item name="startIconDrawable">@drawable/ic_phone_24</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintTextColor" >@color/black</item>
        <item name="cursorColor" >@color/black</item>
        <item name="boxStrokeColor" >@color/black</item>
        <item name="helperText">@string/insert_valid_phone</item>
        <item name="android:hint">@string/enter_your_phone</item>
        <item name="placeholderText">@string/placeholder_phone</item>
        <item name="counterMaxLength">@integer/phone_input_max_length</item>
        <item name="counterEnabled">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="DSComponent.EditTextPhone" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">@integer/phone_input_max_length</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/size_8dp</item>
        <item name="android:textSize">@dimen/size_font_16sp</item>
    </style>

</resources>